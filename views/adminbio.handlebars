<section class="main">
  <div class='row linktoportal'>
    <div class="col-sm-12">
        <a href="adminportal">
          <button>Return to Admin Portal</button>
        </a>
    </div>
  </div>
  <div class='row'>
    <div class="col-sm-12">
      <div class="panel panel-default">
        <div class="panel-heading"><h3>Bio Administration</h3></div>
        <div class="panel-body">
            <div class="row">
              <div class="col-sm-12">
              
                <form enctype="multipart/form-data" action="updateBio" method="POST">
                  <p>Bio (limit 1,000 characters):</p>
                  <textarea rows="4" cols="50" id="Bio" name="Bio" maxlength="1000">{{biodata.bio}}</textarea> 

                  <p>Image:</p>
                  <input type="file" name="profilepicture" id="profilepicture">
                  <input type="text" id="BioImage" name="BioImage" value="{{biodata.image}}"/> 
                  <p>
                    <button type="submit" id="update" class="btn btn-primary">Update About Me</button>
                  </p>
                  </form>
              
              </div>
            <Br/><Br/><Br/><Br/>
        </div>
      </div>
    </div>
  </div>
</section>
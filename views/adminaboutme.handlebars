<section class="main">

  <div class='row pageTitle'>
    <div class="col-sm-12">
        About Me Administration
    </div>
  </div>


  <form enctype="multipart/form-data" action="updateAboutMe" method="POST">

    <div class='row'>
      <div class="col-sm-12">
        <span class="titleText">About Me</span> (limit 2,000 characters)
      </div>
    </div>  
    <div class="row">
      <div class="adminImageArea col-md-5">
        <img class='CMSImage' src="{{dynamicData.aboutimage}}">
        <input type="file" name="profilepicture" id="profilepicture">
        {{!--<input type="text" id="AboutMeImage" name="AboutMeImage" value="{{dynamicData.aboutimage}}"/> --}}
        <p>
          {{!--<button type="submit" id="update" class="btn btn-primary">Update About Me</button>--}}
        </p>
      </div>

      <div class="adminTextArea col-md-7">
        <textarea rows="4" cols="50" id="AboutMeBio" name="AboutMeBio" maxlength="2000">{{dynamicData.about}}</textarea> 
      </div>
    </div>

    <div class='row'>
      <div class="col-sm-12">
        <span class="titleText">Bio</span> (limit 2,000 characters)
      </div>
    </div>
    <div class="row">
      <div class="adminImageArea col-md-5">
        <img class='CMSImage'src="{{dynamicData.bioimage}}">
        <input type="file" name="biopicture" id="biopicture">
        {{!--<input type="text" id="BioImage" name="BioImage" value="{{dynamicData.bioimage}}"/> --}}
      </div>

      <div class="adminTextArea col-md-7">
        <textarea rows="4" cols="50" id="biotext" name="biotext" maxlength="2000">{{dynamicData.bio}}</textarea> 
      </div>

    </div>

    <div class='row'>
      <div class='col-xs-12'>
        <hr>
      </div>
    </div>

    <div class="row">
        <div class='col-xs-12'>
          <button type="submit" id="updatebio" >Update</button>
        </div>
    </div>

  </form>
</section>
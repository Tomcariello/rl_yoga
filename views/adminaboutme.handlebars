<section class="main">

  <form enctype="multipart/form-data" action="updateAboutMe" method="POST">
    <div class='row linktoportal'>
      <div class="col-sm-12">
        <a href="adminportal">Return to Admin Portal</a>
      </div>
    </div>
    <div class='row'>
      <div class="col-sm-12">
        <div class="panel panel-default">
          <div class="panel-heading"><span class="titleText">About Me</span> (limit 2,000 characters)</div>
          <div class="panel-body">
              <div class="row">
                <div class="col-sm-12">
              
                  <div class="row">
                    <div class="adminImageArea col-md-5">
                      <img src="{{aboutmedata.aboutimage}}">
                      <input type="file" name="profilepicture" id="profilepicture">
                      <input type="text" id="AboutMeImage" name="AboutMeImage" value="{{aboutmedata.aboutimage}}"/> 
                      <p>
                        {{!--<button type="submit" id="update" class="btn btn-primary">Update About Me</button>--}}
                      </p>
                    </div>

                    <div class="adminTextArea col-md-7">
                      <textarea rows="4" cols="50" id="AboutMeBio" name="AboutMeBio" maxlength="2000">{{aboutmedata.about}}</textarea> 
                    </div>
                  </div>
              </div>
            <Br/><Br/><Br/><Br/>
        </div>
      </div>
    </div>
  </div>

  <div class='row'>
    <div class="col-sm-12">
      <div class="panel panel-default">
        <div class="panel-heading"><span class="titleText">Bio</span> (limit 2,000 characters)</div>
        <div class="panel-body">
            <div class="row">
              <div class="col-sm-12">
                <div class="row">
                  <div class="adminImageArea col-md-5">
                    <img src="{{aboutmedata.bioimage}}">
                    <input type="file" name="biopicture" id="biopicture">
                    <input type="text" id="BioImage" name="BioImage" value="{{aboutmedata.bioimage}}"/> 
                    <p>
                      
                    </p>
                  </div>

                  <div class="adminTextArea col-md-7">
                    <textarea rows="4" cols="50" id="biotext" name="biotext" maxlength="2000">{{aboutmedata.bio}}</textarea> 
                  </div>

                  </div>
                </div>
              <Br/><Br/><Br/><Br/>
          </div>
        </div>
      </div>
    </div>

<div class="row">
    <div class='col-xs-12'>
      <button type="submit" id="updatebio" class="btn btn-primary">Update Bio</button>
    </div>
</div>

  </form>
</section>
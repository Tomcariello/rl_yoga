<section class="main">
  <div class='row pageTitle'>
    <div class="col-sm-11">
      Video Object Administration
    </div>
    <div class="col-sm-1">
      <i class="fa fa-plus-square" id="addnewproject"></i>
    </div>
  </div>

  {{#each dynamicData}}
    <div class="row">
      <div class="col-sm-12 VideoTitleText">
        {{this.videoname}}
      </div>
    </div>

    <div class="row">
      <form action="updatevideo" method="POST">
        <div class="col-sm-6">
          <div class="row">
            <div class="col-sm-3  formLabel">
              Video Name:
            </div>
            <div class='col-sm-9'>
              <input class="formInput" type="text" id="videoname" name="videoname" value="{{this.videoname}}"/>
            </div>
          </div>
          <div class='row'>
            <div class="col-sm-3 formLabel">
              Description:
            </div>
            <div class="col-sm-9">
              <input class="formInput" type="text" id="description" name="description" value="{{this.description}}"/> 
            </div>
          </div>
          <div class='row'>
            <div class="col-sm-3 formLabel">
              URL:
            </div>
            <div class="col-sm-9">
              <input class="formInput" type="text" id="url" name="url" value="{{this.url}}"/> 
              <input type="hidden" id="dbid" name="dbid" value="{{this.id}}"/>
            </div>
          </div>         
          
          <div class='row'>
            <div class="col-xs-12">
              <button type="submit" id="update">Update</button>
              <a href="deletevideos/{{this.id}}">
                <button type="button" id="delete">Delete</button>
              </a>
            </div>
          </div>
        </div>

        <div clas='col-sm-6'>
          <iframe src="{{this.url}}" frameborder="0" allowfullscreen></iframe>
        </div>
      </form>
    </div>

    <div class="row">
      <div class="cols-sm-12">
        <hr/>
      </div>
    </div>
  {{/each}}


  <!-- Modal -->
  <div class="modal fade" id="myModal" role="dialog">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header pageTitle">
          <button type="button" class="close" data-dismiss="modal">&times;</button>
          Add New Video
        </div>
        
        <div class="modal-body">
          <form action="newvideo" method="POST">
            <div class="row">
              <div class="col-sm-3 formLabel">
                Name:
              </div>
              <div class="col-xs-9">
                <input class="formInput" type="text" id="NewVideoName" name="NewVideoName"/>
              </div>
            </div>
            <div class="row">
            <div class="col-sm-3 formLabel">
                Description:
              </div>
              <div class="col-xs-9">
                <input class="formInput" type="text" id="NewDescription" name="NewDescription"/>
              </div>
            </div>
            <div class="row">
            <div class="col-sm-3 formLabel">
              URL:
              </div>
              <div class="col-xs-9">
                  <input class="formInput" type="text" id="NewVideoURL" name="NewVideoURL"/>
              </div>
            </div>

            <button type="submit" id="update">Submit</button>
            <button type="cancel" id="cancel" data-dismiss="modal">Cancel</button>
          </form>
      </div>
    <div cdiv>
</div> </section> 